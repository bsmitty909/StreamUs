# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=streamus
DATABASE_PASSWORD=streamus_dev_password
DATABASE_NAME=streamus

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_REFRESH_SECRET=change-this-to-another-secure-random-string-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# LiveKit Configuration
# For local Docker (default):
# LIVEKIT_URL=http://localhost:7880
# LIVEKIT_API_KEY=devkey
# LIVEKIT_API_SECRET=devsecret

# For LiveKit Cloud (recommended):
# Get these from https://cloud.livekit.io
LIVEKIT_URL=wss://your-project-xxx.livekit.cloud
LIVEKIT_API_KEY=APIxxxxxxxxxxxxx
LIVEKIT_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# YouTube OAuth Configuration
# Get these from https://console.developers.google.com
# Enable YouTube Data API v3
YOUTUBE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/youtube/callback

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_LIVEKIT_URL=wss://your-project-xxx.livekit.cloud
FRONTEND_URL=http://localhost:3001

# Node Environment
NODE_ENV=development
